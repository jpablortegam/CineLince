<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import java.net.URL?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.cinelinces.HelloController">
    <stylesheets>
        <URL value="@../../../styles/test.css"/>
    </stylesheets>

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="welcomeText" text="Bienvenido a JavaFX 25"/>

    <Button text="Botón Normal" onAction="#onHelloButtonClick" styleClass="button"/>

    <Button text="Botón Animado" onAction="#onAnimatedButtonClick" styleClass="button, animated-button"/>

    <!-- Puedes añadir otros controles para probar más características CSS -->
</VBox>
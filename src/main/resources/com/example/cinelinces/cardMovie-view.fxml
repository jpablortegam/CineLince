<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="cardRoot"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.cinelinces.controllers.CardMovieViewController"
      styleClass="movie-card"
      spacing="8"
      alignment="TOP_CENTER"
      onMouseClicked="#onCardClick"
      onMouseEntered="#onCardHover"
      onMouseExited="#onCardHoverExit"
      prefWidth="340" prefHeight="220"> <StackPane styleClass="image-container" alignment="CENTER">
    <ImageView fx:id="poster"
               styleClass="movie-image"
               fitWidth="316" preserveRatio="true"
               smooth="true" cache="true"/>
</StackPane>

    <padding>
        <Insets top="12" right="12" bottom="12" left="12"/>
    </padding>

    <VBox fx:id="textContainer"
          styleClass="text-container"
          spacing="4"
          alignment="CENTER">
        <Label fx:id="title"
               styleClass="card-title"
               wrapText="true"
               maxWidth="310" text="Título de la película"/>
        <Label fx:id="subtitle"
               styleClass="card-subtitle"
               text="(Año) • Duración"/>
    </VBox>

    <VBox fx:id="detailsPane"
          styleClass="detail-container"
          spacing="8"
          alignment="CENTER"
          visible="false"  managed="false"  opacity="0.0"    maxWidth="310">

        <VBox styleClass="detail-section" spacing="2">
            <Label styleClass="detail-header" text="Sinopsis"/>
            <Label fx:id="synopsisLabel"
                   styleClass="card-detail-text"
                   wrapText="true"
                   maxWidth="300"
                   text="Cargando sinopsis..."/>
        </VBox>

        <VBox styleClass="detail-section" spacing="2">
            <Label styleClass="detail-header" text="Información"/>
            <Label fx:id="durationLabel"
                   styleClass="card-detail-text"
                   text="⏱️ Duración: -- min"/>
            <Label fx:id="genreLabel"
                   styleClass="card-detail-text"
                   text="🎭 Género: Desconocido"/>
            <Label fx:id="yearLabel"
                   styleClass="card-detail-text"
                   text="📅 Estreno: --"/>
        </VBox>

        <VBox styleClass="detail-section" spacing="2">
            <Label styleClass="detail-header" text="Reparto Principal"/>
            <Label fx:id="castLabel"
                   styleClass="card-detail-text"
                   wrapText="true"
                   maxWidth="300"
                   text="⭐ Reparto no disponible."/>
        </VBox>
    </VBox>
</VBox>
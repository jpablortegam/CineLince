<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane fx:id="rootStack"
           xmlns="http://javafx.com/javafx/17.0.12"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.cinelinces.controllers.HomeViewController">

    <ScrollPane fitToWidth="true">
        <VBox spacing="32">
            <padding>
                <Insets top="24" right="24" bottom="32" left="24"/>
            </padding>

            <HBox alignment="CENTER_LEFT" spacing="10" styleClass="section-card">
                <padding>
                    <Insets top="8" bottom="8" left="16" right="16"/>
                </padding>
                <Label text="Selecciona un Cine:" styleClass="text-body-strong"/>
                <ComboBox fx:id="cineComboBox" promptText="Cargando cines..." HBox.hgrow="ALWAYS" styleClass="comboBox"/>
            </HBox>

            <VBox styleClass="section-card" spacing="16">
                <Label styleClass="text-headline" text="Destacados de la semana"/>
                <StackPane fx:id="featuredBannerPane"
                           styleClass="featured-banner"
                           minHeight="150" prefHeight="150" maxHeight="150">

                    <ImageView fx:id="featuredImage" preserveRatio="true" fitHeight="150" />
                    <Region styleClass="gradient-overlay" StackPane.alignment="TOP_LEFT"/>

                    <VBox alignment="BOTTOM_LEFT" spacing="8">
                        <padding>
                            <Insets bottom="16" left="24"/>
                        </padding>
                        <Label fx:id="featuredTitle"
                               styleClass="text-headline"
                               text="Título Película"
                               wrapText="true"/>
                        <Label fx:id="featuredSubtitle"
                               styleClass="text-body"
                               text="Descripción breve de la película"
                               wrapText="true"/>
                        <Button fx:id="btnVerHorarios"
                                styleClass="button-accent"
                                text="Ver horarios"/>
                    </VBox>
                </StackPane>
            </VBox>

            <VBox spacing="16" >
                <HBox alignment="CENTER" spacing="16">
                    <Label styleClass="text-section" text="En cartelera"/>
                    <Region HBox.hgrow="ALWAYS"/>
                </HBox>
                <FlowPane fx:id="enCarteleraPane" hgap="16" vgap="16"/>
            </VBox>

            <VBox spacing="16" styleClass="section-card">
                <HBox alignment="CENTER_LEFT" spacing="16">
                    <Label styleClass="text-section" text="Próximamente"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button styleClass="button-secondary" text="Ver todas"/>
                </HBox>
                <FlowPane fx:id="proximamentePane" hgap="16" vgap="16" styleClass="movie-grid"/>
            </VBox>

        </VBox>
    </ScrollPane>
    <Pane fx:id="overlayPane" pickOnBounds="false"/>
</StackPane>
<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.cinelinces.controllers.PurchaseSummaryViewController"
      spacing="12" alignment="TOP_CENTER">

    <!-- Padding general -->
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Título -->
    <Label text="Resumen de compra"/>

    <!-- ===============================
         1) Sección de boletos (GridPane)
         Cada fila: [ Película—FechaHora ] [ Sala ] [ Asiento ] [ Precio ]
         =============================== -->
    <Label text="Boletos"/>
    <GridPane fx:id="boletosBox" hgap="10" vgap="8">
        <!-- Columnas definidas para que se vean alineadas -->
        <columnConstraints>
            <!-- Columna 0: Película—FechaHora (50%) -->
            <ColumnConstraints percentWidth="50"/>
            <!-- Columna 1: Sala (15%) -->
            <ColumnConstraints percentWidth="15"/>
            <!-- Columna 2: Asiento (15%) -->
            <ColumnConstraints percentWidth="15"/>
            <!-- Columna 3: Precio (20%) -->
            <ColumnConstraints percentWidth="20"/>
        </columnConstraints>
    </GridPane>
    <HBox alignment="CENTER_RIGHT">
        <Label text="Subtotal boletos: "/>
        <Label fx:id="subtotalBoletosLabel" text="0"/>
    </HBox>

    <!-- ===============================
         2) Sección de productos (GridPane)
         Cada fila: [ Nombre prod—Precio ] [ Cantidad ] [ Subtotal ]
         =============================== -->
    <Label text="Productos (Dulcería)"/>
    <GridPane fx:id="productosBox" hgap="10" vgap="8">
        <!-- Columnas para los productos -->
        <columnConstraints>
            <!-- Columna 0: Nombre—Precio (60%) -->
            <ColumnConstraints percentWidth="60"/>
            <!-- Columna 1: Cantidad (20%) -->
            <ColumnConstraints percentWidth="20"/>
            <!-- Columna 2: Subtotal (20%) -->
            <ColumnConstraints percentWidth="20"/>
        </columnConstraints>
    </GridPane>
    <HBox alignment="CENTER_RIGHT">
        <Label text="Subtotal productos: "/>
        <Label fx:id="subtotalProductosLabel" text="0"/>
    </HBox>

    <!-- ===============================
         3) Sección de Promoción (GridPane)
         Se rellena solo si hay promoción activa.
         =============================== -->
    <Label text="Promoción aplicada"/>
    <GridPane fx:id="promoBox" hgap="10" vgap="8">
        <!-- Columnas para mostrar: [“Promoción aplicada”] [Código (Nombre)] [%-Desc] -->
        <columnConstraints>
            <ColumnConstraints percentWidth="50"/>
            <ColumnConstraints percentWidth="30"/>
            <ColumnConstraints percentWidth="20"/>
        </columnConstraints>
    </GridPane>
    <HBox alignment="CENTER_RIGHT">
        <Label text="Descuento: "/>
        <Label fx:id="descuentoLabel" text="-$0"/>
    </HBox>

    <!-- ===============================
         Total a Pagar
         =============================== -->
    <HBox alignment="CENTER_RIGHT" spacing="8">
        <Label text="Total a pagar: "/>
        <Label fx:id="totalPagarLabel" text="0"/>
    </HBox>

    <!-- ===============================
         Botones: Cancelar / Confirmar
         =============================== -->
    <HBox spacing="12" alignment="CENTER_RIGHT">
        <Button fx:id="btnCancelSummary"
                text="Cancelar"
                onAction="#handleCancelSummary"/>
        <Button fx:id="btnConfirmSummary"
                text="Confirmar pago"
                onAction="#handleConfirmSummary"/>
    </HBox>
</VBox>

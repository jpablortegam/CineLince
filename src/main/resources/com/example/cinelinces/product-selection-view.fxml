<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.SpinnerValueFactory?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.cinelinces.controllers.ProductSelectionViewController"
      spacing="12" alignment="TOP_CENTER"
      style="-fx-background-color: white; -fx-padding: 16;">

    <Label text="Selecciona productos y cantidades (opcional)"
           style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

    <ScrollPane fitToWidth="true" fitToHeight="true" prefHeight="300" style="-fx-background:transparent;">
        <GridPane fx:id="productsGrid" hgap="10" vgap="6" alignment="TOP_LEFT">
            <!--
                Aquí el controlador añadirá dinámicamente filas de la forma:
                [Label nombreProducto — $precioUnitario]   [Spinner cantidad]
             -->
        </GridPane>
    </ScrollPane>

    <HBox spacing="8" alignment="CENTER_RIGHT">
        <Button fx:id="btnOmitir" text="Omitir" prefWidth="80" onAction="#handleOmitir"/>
        <Button fx:id="btnNext"   text="Siguiente" prefWidth="80" onAction="#handleNext"/>
    </HBox>
</VBox>
